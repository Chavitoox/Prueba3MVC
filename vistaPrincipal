    private void botonBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                            
         // TODO add your handling code here:
                 String idstr = txtBorrar.getText().trim();
        int id;
        try {
            id = Integer.parseInt(idstr);

        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this,
                    "El id debe ser un número entero válido.",
                    "Error de Formato",
                    JOptionPane.ERROR_MESSAGE);
            txtBorrar.requestFocus(); // Enfoca el campo con error
            return;
        }
        if (idstr.isEmpty()) {
            JOptionPane.showMessageDialog(this,
                    "Por favor, complete todos los campos.",
                    "Advertencia",
                    JOptionPane.WARNING_MESSAGE);
            return;
        }
        Mantenedor mant = new Mantenedor();
        try {Seguro seguro = new Seguro();
        seguro.setId(id);
        boolean eliminado = mant.eliminarProducto(seguro);

        if (eliminado) {
            JOptionPane.showMessageDialog(null, "Seguro eliminado correctamente.");
            txtBorrar.setText("");
        } else {
            JOptionPane.showMessageDialog(null, "No se encontró el seguro o ocurrió un error.");
        }  } catch (NumberFormatException ex) {
            JOptionPane.showMessageDialog(null, "Ingrese un ID válido.");
        } catch (Exception ex) {
            JOptionPane.showMessageDialog(null, "Ocurrió un error: " + ex.getMessage());
        }


    }                                           

    private void BotonActualizarActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
      String idactual = txtActualizar.getText().trim();
      
      if (idactual.isEmpty()) {
            JOptionPane.showMessageDialog(this,
                    "Por favor, complete todos los campos.",
                    "Advertencia",
                    JOptionPane.WARNING_MESSAGE);
            return;
        }
                int id;
        try {
            id = Integer.parseInt(idactual);

        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this,
                    "El id debe ser un número entero válido.",
                    "Error de Formato",
                    JOptionPane.ERROR_MESSAGE);
            txtBorrar.requestFocus(); // Enfoca el campo con error
            return;
        }
        
     Actualizar act = new Actualizar();
        act.setDato(id);
        act.setVisible(true);
    }                                               

