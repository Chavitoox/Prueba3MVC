    private void cargardatos(){
     Mantenedor mant1 = new Mantenedor();
     
     List<Seguro> lista = mant1.listarProductos();
   
    DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
    model.setRowCount(0);
    for (Seguro s: lista){
    model.addRow(new Object[]{s.getId(),s.getNombre(),s.getDescripcionGeneral(),s.getDescripcionDetallada(),s.getPorcentajeCobertura()});
    }
      }
